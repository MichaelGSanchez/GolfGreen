<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:id="@+id/course_favorite"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="controller.CourseFavorite"
  android:background="@drawable/ic_golf_favorite_courses_bg"
  android:adjustViewBounds="true"
  android:scaleType="centerCrop">


  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#0affffff">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp">


      <TextView
        android:id="@+id/textViewCourseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="{Course Name}"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"/>

      <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCourseName"
        android:layout_below="@+id/textViewDifficulty"
        android:text="{505-555-5555}"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"/>


      <TextView
        android:id="@+id/textViewPrice"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCourseName"
        android:layout_below="@+id/textViewCourseName"
        android:text="{$price}"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"/>

      <TextView
        android:id="@+id/textViewDifficulty"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCourseName"
        android:layout_below="@+id/textViewPrice"
        android:background="#0affffff"
        android:text="{0.0}"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"/>


    </RelativeLayout>


  </android.support.v7.widget.CardView>

</LinearLayout>